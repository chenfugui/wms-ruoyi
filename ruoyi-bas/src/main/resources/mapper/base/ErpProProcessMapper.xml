<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cfg.base.mapper.ErpProProcessMapper">
    
    <resultMap type="ErpProProcess" id="ErpProProcessResult">
        <result property="id" column="id"/>
        <result property="proId" column="pro_id"/>
        <result property="empId" column="emp_id"/>
        <result property="stepId" column="step_id"/>
        <result property="stepcode" column="stepCode"/>
        <result property="stepname" column="stepName"/>
        <result property="price" column="price"/>
        <result property="seqno" column="seqNo"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="dr" column="dr"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time" />
    </resultMap>

    <sql id="selectErpProProcessVo">
        select id, pro_id, emp_id, step_id, stepCode, stepName, price, seqNo, status, create_by, create_time, update_by, update_time, dr   from erp_pro_process
    </sql>

    <select id="selectByEntity" parameterType="ErpProProcess" resultMap="ErpProProcessResult">
        <include refid="selectErpProProcessVo"/>
        <where>  
            <if test="proId != null "> and pro_id = #{proId}</if>
            <if test="empId != null  and empId != ''"> and emp_id = #{empId}</if>
            <if test="stepId != null "> and step_id = #{stepId}</if>
            <if test="stepcode != null  and stepcode != ''"> and stepCode = #{stepcode}</if>
            <if test="stepname != null  and stepname != ''"> and stepName like concat('%', #{stepname}, '%')</if>
            <if test="price != null "> and price = #{price}</if>
            <if test="seqno != null "> and seqNo = #{seqno}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="dr != null "> and dr = #{dr}</if>
        </where>
    </select>

    <update id="updateDelFlagByIds">
        update erp_pro_process set del_flag=1
        <where>
            id in <foreach collection="ids" open="(" item="it" close=")" separator=",">#{it}</foreach>
        </where>
    </update>
</mapper>
